<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pt.isec.pa.pong.ui.CommandsPane"
      prefHeight="50.0" prefWidth="600.0"
      fx:id="root" alignment="CENTER" spacing="10">

    <padding>
        <Insets top="10" bottom="10" left="10" right="10" />
    </padding>

    <Button fx:id="btnStart" text="Start game" onAction="#onStart" prefWidth="150"/>
    <Button fx:id="btnPause" text="Pause game" onAction="#onPause" prefWidth="150"/>
    <Button fx:id="btnResume" text="Resume game" onAction="#onResume" prefWidth="150"/>

</HBox>
